{
	"name": "roamer-cerberus-api",
	"version": "0.0.1",
	"description": "ROAMer Remote Obeservation And Manipulation device API (child of Antdroid (hexbot)). REST API for talking to roamer.",
	"author": "Paul Smith",
	"license": "MIT",
	"private": false,
	"scripts": {
		"start": "node handler.mjs",
		"serve": "node handler.mjs",
		"watch": "nodemon handler.mjs",
		"swagger:up": "docker-compose up -d && echo 'access @ http://localhost:8181'",
		"swagger:down": "docker-compose down",
		"test": "env SERVER=http://localhost:8082 ORIGIN=http://localhost mocha test --recursive"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"cerberus-mvc": "^1.0.25",
		"cluster": "^0.7.7",
		"express": "^4.17.1",
		"node-i2c-js": "^1.0.3",
		"request-ip": "^2.1.3",
		"socket.io": "^3.1.2"
	},
	"devDependencies": {
		"nodemon": "^2.0.7",
		"npm-watch": "^0.7.0",
		"mocha": "^8.3.2",
		"supertest": "^4.0.2"
	},
	"engines": {
		"node": ">=8.0.0"
	},
	"mocha": {
		"diff": true,
		"reporter": "spec",
		"slow": 75,
		"timeout": 10000
	}
}
